#include <iostream>
using namespace std;
int main()
{
int N, Thousands, Hundreds, Dozens_1, Units, Dozens_2 ;
cout << "Введите число от 1 до 9999";
cin >> N;
Thousands = N/1000; // Вычисление тысячных
Hundreds = (N%1000)/100;  // вычесление сотней
Dozens_1 = ((N%1000)%100);   // Вычесление десятков, когда последняя цифра 0
Dozens_2 = ((N%1000)%100)/10; // Вычисление десятков, когда последняя цифра не равна нулю 
Units = ((N%1000)%100)%10; // вычисление единиц
if (Thousands==1) cout << "Тысяча";
if (Thousands==2) cout << "Две тысячи";
if (Thousands==3) cout << "Три тысячи";
if (Thousands==4) cout << "Четыре тысячи";
if (Thousands==5) cout << "Пять тысяч";
if (Thousands==6) cout << "Шесть тысяч";
if (Thousands==7) cout << "Семь тысяч";
if (Thousands==8) cout << "Восемь тысяч";
if (Thousands==9) cout << "Девять тысяч";
if (Hundreds == 0 && Dozens_1 == 0 && Units==0) cout << " рублей";
if (Hundreds ==1) cout << " сто";
if (Hundreds ==2) cout << " двести";
if (Hundreds ==3) cout << " триста";
if (Hundreds ==4) cout << " четыреста";
if (Hundreds ==5) cout << " пятьсот";
if (Hundreds ==6) cout << " шестьсот";
if (Hundreds ==7) cout << " семьсот";
if (Hundreds ==8) cout << " восемсот";
if (Hundreds ==9) cout << " девятсот";
if (Dozens_2 == 0 && Units==0 ) cout << " рублей";
if (Dozens_1>9 && Dozens_1<20)
{
if (Dozens_1==10) cout << " десять рублей";
if (Dozens_1==11) cout << " одиннадцать рублей";
if (Dozens_1==12) cout << " двеннадцать рублей";
if (Dozens_1==13) cout << " тринадцать рублей";
if (Dozens_1==14) cout << " четырнадцать рублей";
if (Dozens_1==15) cout << " пятнадцать рублей";
if (Dozens_1==16) cout << " шестнадцать рублей";
if (Dozens_1==17) cout << " семнадцать рублей";
if (Dozens_1==18) cout << " восемнадцать рублей";
if (Dozens_1==19) cout << " девятнадцать рублей";
}
if (Dozens_1<9 || Dozens_1 > 19)
{

if (Dozens_2 == 2) cout << " двадцать";
if (Dozens_2 == 3) cout << " тридцать";
if (Dozens_2 == 4) cout << " сорок";
if (Dozens_2 == 5) cout << " пятьдесят";
if (Dozens_2 == 6) cout << " шестьдесят";
if (Dozens_2 == 7) cout << " семьдесят";
if (Dozens_2 == 8) cout << " восемьдесят";
if (Dozens_2 == 9) cout << " девяносто";
}
if (Units==0 && Dozens_2 == 0 ) cout << " рублей";
if (Units==1) cout << " один рубль";
if (Units==2) cout << " два рубля";
if (Units==3) cout << " три рубля";
if (Units==4) cout << " четыре рубля";
if (Units==5) cout << " пять рублей";
if (Units==6) cout << " шесть рублей";
if (Units==7) cout << " семь рублей";
if (Units==8) cout << " восемь рублей";
if (Units==9) cout << " девять рублей";
return 0;
}
